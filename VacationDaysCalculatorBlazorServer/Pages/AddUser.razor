@page "/AddUser"
@inherits RazorPageBases.AddUserBase;
@attribute [Authorize(Roles = "Admin")]

<h3>Add User</h3>

<EditForm Model="@userDetails" OnValidSubmit="@AddUserAsync">
    <UserFields userDetails="@userDetails"></UserFields>
    <button type="submit" class="btn btn-success">
        <span class="oi oi-plus"></span>
        Add User
    </button>
    <button type="button" class="btn btn-secondary" @onclick="Close">
        <span class="oi oi-media-skip-backward"></span>
        Close
    </button>
</EditForm>

<NotificationDialog @ref="NotificationDialog" Description="@ConcatenatedValidationErrors"></NotificationDialog>
