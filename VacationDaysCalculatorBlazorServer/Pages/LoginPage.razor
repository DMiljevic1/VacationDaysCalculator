@page "/LoginPage"
@using System.Text;
@inherits RazorPageBases.LoginPageBase;

<div class="center">

    <p>Username</p>
    <p>
        <input @bind-value="userLogin.UserName" />
    </p>

    <p>Password</p>
    <p>
        <input @bind-value="userLogin.Password" type="password"/>
    </p>

    <button type="button" class="btn btn-success" @onclick="AuthorizeLogin">
        <span class="oi-pencil"></span>
        Login
    </button>

    <button type="button" class="btn btn-secondary">
        <span class="oi oi-media-skip-backward"></span>
        Close
    </button>
</div>
