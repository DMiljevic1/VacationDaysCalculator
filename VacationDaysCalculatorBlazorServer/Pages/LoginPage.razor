@page "/LoginPage"
@using System.Text;
@inherits RazorPageBases.LoginPageBase;


<CascadingAuthenticationState>
 <AuthorizeView>
     <Authorized>
        <div class="m-1 p-1 text-white">
                @if (user.Identity != null)
                {
                    <p>Welcome, @user.Identity.Name</p>
                }
                else
                {
                    <p>Welcome nemna usera</p>
                }
        </div>
    </Authorized>
    <NotAuthorized>
<div class="center">

    <p>Username</p>
    <p>
        <input @bind-value="userLogin.UserName" />
    </p>

    <p>Password</p>
    <p>
        <input @bind-value="userLogin.Password" type="password"/>
    </p>

    <button type="button" class="btn btn-success" @onclick="AuthorizeLogin">
        <span class="oi-pencil"></span>
        Login
    </button>

    <button type="button" class="btn btn-secondary">
        <span class="oi oi-media-skip-backward"></span>
        Close
    </button>
    @message
</div>
</NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>
